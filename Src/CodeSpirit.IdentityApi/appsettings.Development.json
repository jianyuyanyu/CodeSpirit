{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "ConnectionStrings": {
    "identity-api": "Server=(localdb)\\mssqllocaldb;Database=codespirit-identity;Trusted_Connection=True;MultipleActiveResultSets=true;Packet Size=512"
  },
  "PagesConfiguration": {
    "Pages": [
      {
        "label": "控制台",
        "url": "/",
        "redirect": "/user-manager/users",
        "icon": "fa-solid fa-gauge-high"
      },
      {
        "label": "用户中心",
        "url": "/user-manager",
        "icon": "fa-solid fa-user-group"
      },
      {
        "label": "系统管理",
        "url": "/system",
        "icon": "fa-solid fa-gear"
      },
      {
        "label": "配置中心",
        "url": "/config",
        "icon": "fa-solid fa-sliders",
        "children": [
          {
            "label": "应用管理",
            "url": "applications",
            "icon": "fa-solid fa-cube",
            "schemaApi": "options:https://localhost:62144/api/config/apps?amis"
          },
          {
            "label": "配置管理",
            "url": "settings",
            "icon": "fa-solid fa-list-check",
            "schemaApi": "options:https://localhost:62144/api/config/configitems?amis"
          },
          {
            "label": "环境管理",
            "url": "environments",
            "icon": "fa-solid fa-layer-group"
          }
        ]
      },
      {
        "label": "监控中心",
        "url": "/monitor",
        "icon": "fa-solid fa-chart-line",
        "children": [
          {
            "label": "日志服务",
            "url": "logs",
            "link ": "http://localhost:61688/",
            "icon": "fa-solid fa-file-lines"
          },
          {
            "label": "资源",
            "url": "resources",
            "icon": "fa-solid fa-server",
            "schema": {
              "type": "page",
              "body": {
                "type": "iframe",
                "src": "${aspire_dashboard}/",
                "height": "100%"
              }
            }
          },
          {
            "label": "控制台日志",
            "url": "console-logs",
            "icon": "fa-solid fa-terminal",
            "schema": {
              "type": "page",
              "body": {
                "type": "iframe",
                "src": "${aspire_dashboard}/consolelogs",
                "height": "100%"
              }
            }
          },
          {
            "label": "结构化日志",
            "url": "structured-logs",
            "icon": "fa-solid fa-list",
            "schema": {
              "type": "page",
              "body": {
                "type": "iframe",
                "src": "${aspire_dashboard}/structuredlogs",
                "height": "100%"
              }
            }
          },
          {
            "label": "跟踪",
            "url": "traces",
            "icon": "fa-solid fa-route",
            "schema": {
              "type": "page",
              "body": {
                "type": "iframe",
                "src": "${aspire_dashboard}/traces",
                "height": "100%"
              }
            }
          },
          {
            "label": "指标",
            "url": "metrics",
            "icon": "fa-solid fa-chart-simple",
            "schema": {
              "type": "page",
              "body": {
                "type": "iframe",
                "src": "${aspire_dashboard}/metrics",
                "height": "100%"
              }
            }
          }
        ]
      }
    ]
  }
}
